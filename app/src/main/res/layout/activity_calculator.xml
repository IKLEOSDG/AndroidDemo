<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/fragment_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent">



  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler_view"
      android:layout_width="match_parent"
      android:layout_height="100dp" />
    <!-- 结果显示区域 -->
    <TextView
      android:id="@+id/textViewResult"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="end|bottom"
      android:padding="24dp"
      android:text="0"
      android:textColor="@android:color/white"
      android:textSize="72sp"
      tools:ignore="MissingConstraints" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      tools:ignore="MissingConstraints">

      <!-- 每一行按钮 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
          android:id="@+id/bt_ac"
          style="@style/FunctionButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_grey"
          android:text="AC" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_negate"
          style="@style/FunctionButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:tag="negate"
          android:background="@drawable/button_touch_grey"
          android:text="+/-" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_percent"
          style="@style/FunctionButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_grey"
          android:text="%" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_divide"
          style="@style/OperatorButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_orange"
          android:text="÷" />

      </LinearLayout>

      <!-- 第2行 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
          android:id="@+id/bt_7"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="7" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_8"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="8" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_9"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="9" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_multi"
          style="@style/OperatorButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_orange"
          android:text="x" />
      </LinearLayout>

      <!-- 第3行 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
          android:id="@+id/bt_4"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="4" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_5"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="5" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_6"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="6" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_sub"
          style="@style/OperatorButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_orange"
          android:text="-" />

      </LinearLayout>
      <!-- 第4行 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
          android:id="@+id/bt_1"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="1" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_2"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="2" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_3"
          style="@style/NumberButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_black"
          android:text="3" />

        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

        <Button
          android:id="@+id/bt_plus"
          style="@style/OperatorButton"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/button_touch_orange"
          android:text="+" />

      </LinearLayout>
      <!-- 第5行 -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

          <Button
            android:id="@+id/bt_0"
            style="@style/zero_Button"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:background="@drawable/button_touch_diff"
            android:tag="0"
            android:text="0" />

        </LinearLayout>

        <View
          android:layout_width="16dp"
          android:layout_height="match_parent" />

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

          <Button
            android:id="@+id/bt_point"
            style="@style/NumberButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_touch_black"
            android:text="." />

          <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

          <Button
            android:id="@+id/bt_equal"
            style="@style/OperatorButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_touch_orange"
            android:text="=" />

        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
